<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stockName"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="股票名称" />

        <TextView
            android:id="@+id/nowPrice"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="当前价格" />

        <TextView
            android:id="@+id/ttmPrice"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="TTM市盈率好价" />

        <TextView
            android:id="@+id/drcPrice"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="动态股息率好价"
            />

        <TextView
            android:id="@+id/other"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="更多" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stock01"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="安图生物" />

        <EditText
            android:id="@+id/stockNowPrice01"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/stockTtmPrice01"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/stockDrcPrice01"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/stockDetail01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="详情>>" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stock02"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="海天味业" />

        <EditText
            android:id="@+id/stockNowPrice02"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/stockTtmPrice02"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/stockDrcPrice02"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/stockDetail02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="详情>>" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stock03"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="贵州茅台" />

        <EditText
            android:id="@+id/stockNowPrice03"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/stockTtmPrice03"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/stockDrcPrice03"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/stockDetail03"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="详情>>" />

    </LinearLayout>

</LinearLayout>